# https://editorconfig.org/

root = true

[*]
charset                  = utf-8
end_of_line              = lf
trim_trailing_whitespace = false
insert_final_newline     = true

# PHP-Files, Composer.json, MD-Files
[{*.php,composer.json,*.md}]
indent_style             = space
indent_size              = 4
max_line_length          = 100

# HTML-Files LESS-Files SASS-Files CSS-Files JS-Files JSON-Files
[*.{html,phtml,less,sass,css,js,json}]
indent_style = tab
indent_size = 4

# Gitlab-CI, Travis-CI
[*.yml]
indent_style = space
indent_size = 2
